specVersion: 0.0.2
schema:
  file: ./schema.graphql
dataSources:
  - kind: ethereum
    name: GUARD
    network: {{network}}
    source:
      address: "{{guardianNFTAddress}}"
      abi: GUARD
      startBlock: 12944628
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.5
      language: wasm/assemblyscript
      entities:
        - GuardianNFT
        - Account
      abis:
        - name: GUARD
          file: ../../packages/hardhat-ts/deployments/{{network}}/GUARD.json
      eventHandlers:
        - event: Transfer(indexed address,indexed address,indexed uint256)
          handler: handleSafeMint
      file: ./src/guardianNFT-mapping.ts